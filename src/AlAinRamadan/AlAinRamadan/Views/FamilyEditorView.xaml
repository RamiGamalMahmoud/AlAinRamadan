<Window
    x:Class="AlAinRamadan.Views.FamilyEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AlAinRamadan.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="بيانات عائلة"
    Padding="5"
    x:ClassModifier="internal"
    FontFamily="Arial"
    FontSize="18"
    FontWeight="Bold"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border
        Margin="12"
        Padding="12"
        BorderBrush="LightGray"
        BorderThickness="1"
        CornerRadius="5"
        FlowDirection="RightToLeft">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,5"
                Orientation="Horizontal">
                <TextBlock
                    Width="120"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Text="اسم صاحب البطاقة" />

                <StackPanel Orientation="Vertical">
                    <TextBox Width="200" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Height="auto"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        Content="اسم العائلة مستخدم"
                        FontSize="10"
                        Style="{StaticResource LabelWarning}"
                        Visibility="{Binding HasFoundFamiliesByName, Converter={StaticResource BoolToVis}}" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,0"
                Orientation="Horizontal">
                <TextBlock
                    Width="120"
                    VerticalAlignment="Center"
                    Text="رقم البطاقة" />
                <StackPanel Orientation="Vertical">
                    <TextBox Width="200" Text="{Binding CardNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Height="auto"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        Content="رقم بطاقة مستخدم"
                        FontSize="10"
                        Style="{StaticResource LabelDanger}"
                        Visibility="{Binding HasFoundFamiliesByCardNumber, Converter={StaticResource BoolToVis}}" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                Orientation="Horizontal">
                <TextBlock
                    Width="120"
                    VerticalAlignment="Center"
                    Text="اسم مقدم الطلب" />
                <StackPanel Orientation="Vertical">
                    <TextBox Width="200" Text="{Binding ApplicantName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Height="auto"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        Content="الاسم مستخدم في العائلة أو في مقدم الطلب"
                        FontSize="10"
                        Style="{StaticResource LabelWarning}"
                        Visibility="{Binding HasFoundFamiliesByName, Converter={StaticResource BoolToVis}}" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Margin="0,10,0,0"
                Orientation="Horizontal">
                <TextBlock
                    Width="120"
                    VerticalAlignment="Center"
                    Text="ملاحظات" />
                <TextBox Width="200" Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel
                Grid.Row="4"
                Margin="0,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Click="Button_Click"
                    Command="{Binding SaveCommand}"
                    Content="حفظ"
                    FontFamily="Arial"
                    FontSize="18"
                    IsDefault="True"
                    Style="{StaticResource ButtonPrimary}" />
            </StackPanel>

            <ListView
                Grid.Row="5"
                FontSize="14"
                ItemsSource="{Binding FoundFamiliesByName}"
                Style="{StaticResource ListView.Small}"
                Visibility="{Binding HasFamilies, Converter={StaticResource BoolToVis}}">

                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="الاسم" />
                        <GridViewColumn DisplayMemberBinding="{Binding CardNumber}" Header="رقم البطاقة" />
                        <GridViewColumn DisplayMemberBinding="{Binding ApplicantName}" Header="اسم مقدم الطلب" />
                    </GridView>
                </ListView.View>

            </ListView>

        </Grid>
    </Border>

</Window>
