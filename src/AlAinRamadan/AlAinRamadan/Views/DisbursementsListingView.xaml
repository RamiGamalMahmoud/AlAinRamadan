<UserControl
    x:Class="AlAinRamadan.Views.DisbursementsListingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:AlAinRamadan.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:ClassModifier="internal"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="0,5"
                HorizontalAlignment="Center">
                <StackPanel Grid.Row="0" Orientation="Horizontal">

                    <StackPanel Margin="5,0" Orientation="Vertical">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{StaticResource Primary}"
                            Text="تسلسل العائلة" />
                        <TextBox
                            Name="TextBoxFamilyId"
                            Width="200"
                            Margin="0,5,0,0"
                            Padding="10"
                            Focusable="True"
                            FontSize="30"
                            GotFocus="TextBoxFamilyId_GotFocus"
                            Text="{Binding FamilyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel>
                        <StackPanel Margin="5,0" Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="{StaticResource Primary}"
                                Text="رقم البطاقة" />
                            <TextBox
                                Name="TextBoxCardNumber"
                                Width="200"
                                Margin="0,5,0,0"
                                Padding="10"
                                Focusable="True"
                                FontSize="30"
                                GotFocus="TextBoxCardNumber_GotFocus"
                                Text="{Binding CardNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Center" />
                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </Border>



            <Border
                Grid.Row="1"
                Padding="0,5"
                HorizontalAlignment="Center">
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Height="auto">
                        <Label.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="#c0392b"
                                    Text="رقم التذكرة" />
                                <Label
                                    Height="auto"
                                    Margin="5,0"
                                    Content="{Binding TicketNumber}"
                                    FontSize="14" />

                            </StackPanel>
                        </Label.Content>
                    </Label>

                    <Button
                        Height="auto"
                        Margin="5,0"
                        IsDefault="True"
                        BorderBrush="{StaticResource Primary}"
                        Click="Button_Click"
                        Command="{Binding DirectPrintTicketCommand}"
                        Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="طباعة الشريط" />
                            <Image
                                Height="24"
                                Margin="5,0"
                                Source="pack://application:,,,/Resources/Images/print-label-dark.png" />
                        </StackPanel>
                    </Button>

                    <Label Height="auto" BorderBrush="{StaticResource DangerBrush}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="اسم العائلة" />
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Foreground="{StaticResource Primary}"
                                Text="{Binding Family.Name}" />
                        </StackPanel>
                    </Label>
                    <Label
                        Margin="5,0"
                        Content="آخر صرف"
                        Style="{StaticResource LabelWarning}" />
                    <Label Margin="5,0">
                        <TextBlock
                            VerticalAlignment="Center"
                            FlowDirection="LeftToRight"
                            Text="{Binding LastDisbursement.DateCreated, StringFormat=yyyy/MM/dd}" />
                    </Label>
                    <Label Margin="5,0">
                        <TextBlock
                            VerticalAlignment="Center"
                            FlowDirection="LeftToRight"
                            Text="{Binding LastDisbursement.DateCreated, StringFormat=hh:mm:ss tt}" />
                    </Label>

                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="ملاحظات" />
                        <TextBox Width="200" Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                </StackPanel>
            </Border>

        </Grid>

        <Border
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Panel.ZIndex="1">
            <DataGrid
                hc:DataGridAttach.ShowRowNumber="True"
                AutoGenerateColumns="False"
                GridLinesVisibility="Vertical"
                IsReadOnly="True"
                ItemsSource="{Binding Disbursements}"
                RowHeaderWidth="50"
                VerticalGridLinesBrush="LightGray">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding TicketNumber}"
                        Header="رقم التذكرة" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding DateCreated, StringFormat=yyyy/MM/dd}"
                        Header="التاريخ" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding DateCreated, StringFormat=hh:mm:ss tt}"
                        Header="الوقت" />
                    <DataGridTextColumn Binding="{Binding Notes}" Header="ملاحظات" />
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="10,0,0,0"
                                    Padding="5"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.DeleteDisbursementCommand}"
                                    CommandParameter="{Binding}"
                                    Content="حذف"
                                    Cursor="Hand"
                                    Style="{StaticResource ButtonDanger}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border
            Grid.RowSpan="3"
            Margin="0,150,10,0"
            Padding="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Panel.ZIndex="1000"
            Background="{StaticResource White}"
            CornerRadius="5"
            Visibility="{Binding HasFamilies, Converter={StaticResource BoolToVis}}">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    ShadowDepth="1"
                    Color="LightGray" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ToggleButton
                    Grid.Row="0"
                    Width="20"
                    Height="20"
                    Padding="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="&#x2715;"
                    Cursor="Hand"
                    IsChecked="{Binding HasFamilies, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ListView
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Cursor="Hand"
                    GotFocus="ListView_GotFocus"
                    ItemsSource="{Binding Families}"
                    SelectedItem="{Binding Family}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Id}"
                                Header="التسلسل" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding Name}"
                                Header="اسم العائلة" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding CardNumber}"
                                Header="رقم البطاقة" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

    </Grid>

</UserControl>
