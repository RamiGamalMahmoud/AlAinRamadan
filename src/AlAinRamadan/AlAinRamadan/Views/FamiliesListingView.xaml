<UserControl
    x:Class="AlAinRamadan.Views.FamiliesListingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:AlAinRamadan.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:ClassModifier="internal"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="5"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="100"
                    HorizontalAlignment="Left"
                    Command="{Binding AddFamilyCommand}"
                    Content="إضافة"
                    Cursor="Hand"
                    FontSize="14"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="100"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding PrintAllBarcodesCommand}"
                    Content="باركود"
                    Cursor="Hand"
                    FontSize="14"
                    Style="{StaticResource ButtonInfo}" />

                <TextBox
                    Width="200"
                    Margin="20,0,0,0"
                    Text="{Binding FamilyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Padding="5"
            CornerRadius="5">

            <DataGrid
                hc:DataGridAttach.ShowRowNumber="True"
                AutoGenerateColumns="False"
                GridLinesVisibility="Vertical"
                IsReadOnly="True"
                ItemsSource="{Binding Families}"
                RowHeaderWidth="50"
                VerticalGridLinesBrush="LightGray">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Id}"
                        Header="التسلسل" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Name}"
                        Header="الاسم" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding CardNumber}"
                        Header="رقم البطاقة" />

                    <DataGridTemplateColumn>

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Padding="5"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ShowEditFamilyCommand}"
                                        CommandParameter="{Binding}"
                                        Content="تعديل"
                                        Cursor="Hand"
                                        Style="{StaticResource ButtonWarning}" />

                                    <Button
                                        Margin="10,0,0,0"
                                        Padding="5"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.PrintFamilyBarcodeCommand}"
                                        CommandParameter="{Binding}"
                                        Content="باركود"
                                        Cursor="Hand"
                                        Style="{StaticResource ButtonInfo}" />

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </Border>

        <Border Grid.Row="2" Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#8e44ad"
                    Text="عدد العائلات المسجلة" />

                <Label
                    Height="auto"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="{Binding TotalFamilies}"
                    FontSize="20" />
            </StackPanel>
        </Border>

    </Grid>

</UserControl>
