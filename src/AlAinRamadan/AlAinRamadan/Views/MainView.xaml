<Window
    x:Class="AlAinRamadan.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AlAinRamadan.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:ClassModifier="internal"
    Background="#F5F5F5"
    FontFamily="Arial"
    FontSize="14"
    FontWeight="Bold"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Border Padding="10" FlowDirection="RightToLeft">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Padding="5"
                Background="White"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ListBox
                        Grid.Row="0"
                        BorderThickness="0"
                        DisplayMemberPath="Title"
                        ItemsSource="{Binding ViewItems}"
                        SelectedItem="{Binding SelectedViewItem}">

                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource ListBoxItemBaseStyle}" TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Margin" Value="0,5" />
                                <Setter Property="Padding" Value="20" />
                                <Setter Property="FontSize" Value="20" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                    </ListBox>

                    <Border
                        Grid.Row="1"
                        Padding="5"
                        Background="{StaticResource White}"
                        CornerRadius="5">

                        <StackPanel Margin="0,10">

                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="طابعة الفواتير" />
                                <ComboBox
                                    Cursor="Hand"
                                    FlowDirection="LeftToRight"
                                    ItemsSource="{Binding Printers}"
                                    SelectedValue="{Binding RecipePrinter}" />
                            </StackPanel>

                            <StackPanel Margin="0,10" Orientation="Vertical">
                                <TextBlock Text="طابعة البار كودد" />
                                <ComboBox
                                    Cursor="Hand"
                                    FlowDirection="LeftToRight"
                                    ItemsSource="{Binding Printers}"
                                    SelectedValue="{Binding LabelPrinter}" />
                            </StackPanel>

                        </StackPanel>

                    </Border>

                    <TextBlock
                        Grid.Row="2"
                        Margin="0,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Primary}"
                        Text="{Binding Version}"
                        ToolTip="{Binding Version}" />

                </Grid>
            </Border>

            <Border
                Grid.Column="2"
                Background="White"
                CornerRadius="10">
                <Grid>
                    <Image
                        MaxHeight="700"
                        Opacity="0.3"
                        Source="/Resources/Images/mosque.png" />
                    <ContentControl Content="{Binding CurrentView}" />
                </Grid>
            </Border>
        </Grid>
    </Border>

</Window>
